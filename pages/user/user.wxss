page{
  background-image: linear-gradient(0deg, #bc95c6 0%, #7dc4cc 100%);
} 

/*分割线样式*/
.divLine{
  background: #E0E3DA;
  width: 100%;
  height: 5rpx;
 }


.user{
  position: absolute;
  top: 40%;
  width: 95%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.userinfo {
  width: 95%;
  margin: 10rpx;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  box-shadow: 0 0 50rpx rgba(0, 0, 0, 0.15);
  border-radius: 20rpx;
  align-items:stretch;
}

.avatar{
  z-index: 10;
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
}

.info-item{
  margin: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  
}

.left-text{
  margin-left: 20rpx;
}

.right-text{
  margin-right: 20rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.hightest-score{
  margin-left: 20rpx;
  margin-top: 40rpx;
}

.score{
  margin-top: 10rpx;
  padding-left: 10rpx;
  background-color: lightblue;
  border-radius: 10rpx;
}
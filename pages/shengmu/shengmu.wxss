.container {
  background-color: rgb(1, 185, 235);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.text-background {
  width: 160px;
  height: 80px;
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10px auto;
  position: absolute;
  top: 1%;
}

.center-text {
  font-size: 28px;
}

.video-player {
  width: 80%;
  height: 30%;
  position: absolute;
  top: 16%;
  left: 10%;
  margin-bottom: 20px;
}
.buttons {
  display: flex;
  justify-content: space-between; 
  position: absolute;
  top: 50%;
}

.btn {
  width: 90px; 
  height: 90px; 
  background-color: transparent; 
  border: none; 
  margin: 0 15px; 
}

